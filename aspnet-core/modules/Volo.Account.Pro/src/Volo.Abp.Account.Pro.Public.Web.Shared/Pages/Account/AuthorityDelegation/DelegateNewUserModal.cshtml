@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Options
@using Volo.Abp.Account.AuthorityDelegation
@using Volo.Abp.Account.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.Abp.AspNetCore.Mvc.UI.Bundling.TagHelpers
@model Volo.Abp.Account.Pro.Public.Web.Shared.Pages.Account.AuthorityDelegation.DelegateNewUserModal
@inject IHtmlLocalizer<AccountResource> L
@inject IOptions<AbpAccountAuthorityDelegationOptions> Options
@{
    Layout = null;
}

@if (Options.Value.EnableDelegatedImpersonation)
{
    <form id="DelegateNewUserForm" data-check-form-on-close="false">
        <abp-modal id="DelegateNewUserModal">
            <abp-modal-header title="@L["DelegateNewUser"].Value"></abp-modal-header>
            <abp-modal-body>
                <div class="mb-3">
                    <label for="TargetUserId">@L["UserName"].Value</label>
                    <select class="form-control" id="TargetUserId" name="TargetUserId"></select>
                </div>
                <div class="mb-3">
                    <label for="inputTime" class="form-label">@L["DelegationDateRange"]</label>
                    <input type="text" id="inputTime" class="form-control" autocomplete="off">
                </div>
            </abp-modal-body>
            <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
        </abp-modal>
    </form>
    <abp-script src="/Pages/Account/AuthorityDelegation/DelegateNewUserModal.js"/>
}
